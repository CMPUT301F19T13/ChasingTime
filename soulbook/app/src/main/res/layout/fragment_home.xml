<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom"
        android:id="@+id/homepage_addmood"
        android:layout_marginBottom="60dp"
        android:src="@drawable/add"
        android:backgroundTint="#1c6db3"
        app:fabCustomSize="40dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end|bottom"
        android:backgroundTint="@color/colorblue"
        android:src="@drawable/detail"
        app:fabCustomSize="40dp"
        android:layout_marginBottom="60dp"
        android:layout_marginRight="40dp"
        android:id="@+id/homepage_showbutton"/>

    <Spinner
        android:id="@+id/filter_mood"
        android:layout_width="180dp"
        android:layout_height="25dp"
        android:layout_gravity="end|bottom"
        android:layout_marginBottom="100dp"
        android:entries="@array/socialSituation"
        app:fabCustomSize="200dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#1c6db3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/touxiang" />

            <TextView
                android:id="@+id/homepage_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="nickname"
                android:textColor="#ffffff"
                android:textSize="35dp" />

        </FrameLayout>

        <ListView
            android:id="@+id/homepage_moodlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="60dp">

        </ListView>

    </LinearLayout>

</FrameLayout>